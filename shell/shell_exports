# Source: https://github.com/nicksp/dotfiles/blob/master/shell/shell_exports

# NOTE  Defaults
export SHELL=/bin/zsh
export EDITOR="vim"


# NOTE  Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"


# NOTE  Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X"


# NOTE  Homebrew cask
export HOMEBREW_CASK_OPTS="--appdir=/Applications"


# NOTE  Load nvm
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
